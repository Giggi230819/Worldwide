name: Update Sitemap from Blogger RSS

on:
  schedule:
    - cron: "0 */6 * * *"   # har 6 ghante me chalega
  workflow_dispatch:        # manually bhi run kar sakta hai

jobs:
  update-sitemap:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Fetch and Convert Blogger RSS to Sitemap
        run: |
          python3 - <<EOF
          import feedparser

          rss_url = "https://worldwidenews2308.blogspot.com/feeds/posts/default?alt=rss"
          feed = feedparser.parse(rss_url)

          with open("sitemap.xml", "w", encoding="utf-8") as f:
              f.write('<?xml version="1.0" encoding="UTF-8"?>\n')
              f.write('<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">\n')
              for entry in feed.entries:
                  f.write(f'  <url><loc>{entry.link}</loc></url>\n')
              f.write('</urlset>\n')
          EOF

      - name: Commit and Push
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add sitemap.xml
          git commit -m "Update sitemap from Blogger RSS" || echo "No changes to commit"
          git push
